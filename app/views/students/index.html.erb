<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>





<table>
  <tr>
    <td>List all Student</td>
    <td><%= link_to "Add new Student", new_student_path %></td>
  </tr>

  <tr>
    <td>ID</td>
    <td>Student Name</td>

  </tr>

      <% @@i=0 %>
      <% students.each do |item| %>
          <tr>
            <td><%= @@i=@@i+1 %></td>
            <td><%= item.student_name %></td>
            <td>
              <%= link_to 'Show', item %> |
              <%= link_to "Edit", edit_student_path(item)  %> |
              <%= link_to "Delete", item, :confirm => "Are you sure?", :method => :delete  %>
            </td>
          </tr>

      <% end %>



  <tr>
    <td>
      Total number of data is: <%= students.count %>
    </td>
    <td><%= link_to "Add new Course", new_course_path %></td></tr>


</table>
