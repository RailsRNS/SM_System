<h1>Courses#new</h1>
<p>Find me in app/views/courses/new.html.erb</p>

<p>Add new Course</p>
<%= form_for @course do |f| %>
    <% if @course.errors.any? %>
        <ul>
          <% @course.errors.full_messages.each do |message| %>
              <li><%= message%></li>
          <% end %>
        </ul>
        <% end %>
    <p>
      <%=f.label :course_name %>
      <%= f.text_field :course_name %>

    </p>
    <p>
      <%= f.submit "Add New Course" %>
    </p>


<% end %>



