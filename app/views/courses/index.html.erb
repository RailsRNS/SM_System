<h1>Courses#index</h1>
<p>Find me in app/views/courses/index.html.erb</p>


<table>
  <tr><td>List all courses</td>


  <tr>
    <td>ID</td>
    <td>Course</td>
    <td>Action</td>
  </tr>

      <% @@i=0 %>
      <% @course.each do |course| %>
          <tr>
            <td><%= @@i=@@i+1 %></td>
            <td><%= course.course_name %></td>
            <td>
              <%= link_to "Edit", edit_course_path(course)  %> |
              <%= link_to "Delete", course, :confirm => "Are you sure?", :method => :delete  %> |
              <%= link_to "Show", course, :confirm => "Show", :method => :get  %>
            </td>
          </tr>

      <% end %>



  <tr>
    <td>
      Total number of data is: <%= @course.count %>

    </td>
    <br />

   <td><%= link_to "Add new Course", new_course_path %></td></tr>


</table>
